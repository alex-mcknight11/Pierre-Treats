@{
  Layout = "_Layout";
}

@using Pierre.Models;
@model Pierre.Models.PierreContext;

@if(@Model.Flavors.ToList().Count == 0)
{
<h4>There are no flavors listed.</h4>
}
else
{
<h4>Current Flavors:</h4>
@foreach (Flavor flavor in Model.Flavors.ToList())
{
  <li>@Html.ActionLink($"{flavor.Description}", "Details", "Flavors", new {id = flavor.FlavorId})</li>
}
}



@if(@Model.Treats.ToList().Count == 0)
{
<h4>There are no treats listed.</h4>
}
else
{
<h4>Treats List:</h4>
@foreach (Treat treat in Model.Treats.ToList())
{
  <li>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new { id = treat.TreatId})</li>
}
}